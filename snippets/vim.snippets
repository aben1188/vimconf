# guards
snippet gg
	if exists('${1:g:_loaded_`Filename()`}') || &cp${2: || version < 700}
	    finish
	endif

	let $1 = 1${3}
snippet gb
	if exists('${1:b:_loaded_`Filename()`}') || &cp${2: || version < 700}
	    finish
	endif

	let $1 = 1${3}

# functions
snippet fun
	fun! ${1:function_name}(${2})
		${3:" code}
	endfun
